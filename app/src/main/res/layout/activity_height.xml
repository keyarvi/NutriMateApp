<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mainbackground"
        android:contentDescription="@string/app_name" />

    <!-- Foreground -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="17dp"
        android:background="@android:color/transparent">

        <!-- Title & Instruction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How tall are you?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Knowing your height allows us to estimate healthy ranges for your goals."
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginBottom="30dp" />

            <!-- Height Selector Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Pointer Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/pointerheight" />

                <!-- Height Display (Value + cm) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp">

                    <TextView
                        android:id="@+id/heightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="180"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cm"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Height Scroll Selector with Center Line -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="16dp">

                    <ScrollView
                        android:id="@+id/heightScroll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:overScrollMode="never">

                        <LinearLayout
                            android:id="@+id/heightContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal" />
                    </ScrollView>

                    <!-- Center Guide Marker -->
                    <View
                        android:layout_width="48dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@android:color/white"
                        android:alpha="0.7"
                        android:elevation="6dp"
                        android:translationZ="3dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EAEAED"
                android:text="Back"
                android:textColor="#050505"
                android:gravity="center" />

            <Button
                android:id="@+id/continueButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#057EDB"
                android:text="Continue"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
