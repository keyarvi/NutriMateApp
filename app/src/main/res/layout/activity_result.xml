<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".Result">

    <TextView
        android:id="@+id/result_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, User"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/result_goal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your goal: Maintain"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/result_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/result_calories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Target Calories: 2000 kcal"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/result_goal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/result_protein"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Protein: 100g"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/result_calories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/result_carbs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Carbs: 250g"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/result_protein"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/result_fats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fats: 70g"
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/result_carbs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
