<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:padding="24dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButtons"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Top Space -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What pace fits your lifestyle?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:paddingBottom="10dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your journey should feel natural and motivating. Pick the pace that feels just right for you."
                android:textSize="14sp"
                android:textColor="#EEEEEE"
                android:gravity="center"
                android:paddingBottom="28dp" />

            <!-- SLOW -->
            <LinearLayout
                android:id="@+id/option_slow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="18dp"
                android:orientation="horizontal"
                android:background="@drawable/option_frame_white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_slow"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Slow\nGentle changes at your own rhythm"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+150 cal"
                    android:textStyle="bold"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- STEADY -->
            <LinearLayout
                android:id="@+id/option_steady"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="18dp"
                android:orientation="horizontal"
                android:background="@drawable/option_frame_white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_steady"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Steady\nBalanced habits and consistent progress"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+300 cal"
                    android:textStyle="bold"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- FAST -->
            <LinearLayout
                android:id="@+id/option_fast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:padding="18dp"
                android:orientation="horizontal"
                android:background="@drawable/option_frame_white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_fast"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Fast\nAccelerated results with stronger effort"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+500 cal"
                    android:textStyle="bold"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM BUTTONS -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F8F5F5"
            android:padding="12dp"
            android:text="Back"
            android:textColor="#000000" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:backgroundTint="#004AAD"
            android:textColor="#FFFFFF"
            android:layout_marginStart="12dp"
            android:padding="12dp" />
    </LinearLayout>

</RelativeLayout>
