<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Portions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the amount (in grams) of each food you had:"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/option_bg"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/labelItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Item"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:inputType="number"
                android:hint="Grams (e.g., 120)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/option_bg"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/labelItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Item"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:inputType="number"
                android:hint="Grams (e.g., 120)" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/option_bg"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/labelItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Item"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:inputType="number"
                android:hint="Grams (e.g., 120)" />
        </LinearLayout>


        <Button
            android:id="@+id/btnSubmitPortions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Meals"
            android:backgroundTint="#1976D2"
            android:textColor="#FFF"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
