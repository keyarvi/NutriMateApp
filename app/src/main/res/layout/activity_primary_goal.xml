<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”½ Fullscreen Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mainbackground"
        android:contentDescription="@string/app_name" />

    <!-- ðŸ”¼ Foreground Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <!-- Progress Dots (Placeholder) -->


            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your primary goal?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This helps us shape a plan that truly aligns with your needs â€” so progress always feels meaningful."
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />

            <!-- Goal Option Buttons -->
            <Button
                android:id="@+id/loseWeightBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Lose Weight"
                android:textStyle="bold"
                android:backgroundTint="#004AAD"
                android:textColor="@color/white" />

            <Button

                android:id="@+id/gainMuscleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#004AAD"
                android:text="Gain Weight and Muscle"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/maintainWeightBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#004AAD"
                android:text="Maintain Weight"
                android:textColor="@color/white"
                android:textStyle="bold" />



            <!-- Navigation Buttons (Back + Continue) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back"
                    android:textColor="@color/white"
                    android:backgroundTint="#004AAD"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/continueButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Continue"
                    android:backgroundTint="#004AAD"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
